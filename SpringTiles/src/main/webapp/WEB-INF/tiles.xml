			value="/WEB-INF/views/templates/defaultFooter.jsp" />
	</definition>

	<definition name="home" extends="template-def">
		<put-attribute name="title" value="Welcome" />
		<put-attribute name="body"
			value="/WEB-INF/views/pages/home.jsp" />
	</definition>

	<definition name="contact" extends="template-def">
		<put-attribute name="title" value="Contact" />
